     <script>
       function calcularnota(){
        let txtErradas = document.getElementById("Erradas")
        let txtEmBranco = document.getElementById("EmBranco")
        let EmBranco = Number(txtEmBranco.value)
        let Erradas= Number(txtErradas.value)
        
        
        let resultado= 120 - 2 * Erradas -  EmBranco
        alert(resultado)
        
       }
     </script>
